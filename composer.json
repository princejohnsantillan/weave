{
    "name": "princejohnsantillan/weave",
    "description": "An elegant and easy way to format strings and stubs.",
    "authors": [
        {
            "name": "Prince John Santillan",
            "email": "iam@princejohn.dev"
        }
    ],
    "keywords" : [
        "elegant", "string", "format", "stub", "interpolate"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "orchestra/testbench": "^10.0||^9.0",
        "larastan/larastan": "^3.7",
        "pestphp/pest": "^v3.8"
    },
    "autoload": {
        "psr-4": {
            "PrinceJohn\\Weave\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PrinceJohn\\Weave\\WeaveServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": [
            "@php vendor/bin/pint"
        ],
        "analyse": [
            "@php vendor/bin/phpstan --memory-limit=-1"
        ],
        "test": [
            "@php vendor/bin/pest"
        ],
        "qa": [
            "@lint",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
